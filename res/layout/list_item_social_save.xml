<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grayD190190190" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/llProfilePictureForSave"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="2dp"
            android:background="@color/bg_cell"
            android:orientation="horizontal"
            android:paddingTop="60dp" >

            <com.facebook.widget.ProfilePictureViewProfile
                android:id="@+id/profilepic"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_gravity="center|top"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="30dp"
                app:is_cropped="false" />
        </LinearLayout>

        <include
            android:id="@+id/include"
            layout="@layout/list_item_save"
            android:paddingTop="50dp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/grey_cyrcle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center">

        <!--ImageView
            android:id="@+id/tvDateImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="left|top"
            android:layout_marginLeft="33dp"
            android:scaleType="fitXY"
            android:src="@drawable/gray_circles0" /-->

        <com.proxiad.savr.common.CustomTextViewMuseo
            android:id="@+id/tvDate"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_gravity="center"
   			android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="45dp"
            android:singleLine="false"
            android:textColor="#ffffff" 
            android:background="@drawable/gray_circles0">
        </com.proxiad.savr.common.CustomTextViewMuseo>
    </RelativeLayout>

    <ImageView
        android:id="@+id/pointer"
        android:layout_width="28dp"
        android:layout_height="10dp"
        android:layout_gravity="left|top"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="108dp"
        android:scaleType="fitXY"
        android:src="@drawable/pointer" />

</FrameLayout>
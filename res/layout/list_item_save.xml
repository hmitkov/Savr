<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_cell"
    android:gravity="top|left"
    android:orientation="vertical"
    android:paddingLeft="13dp" >

    <com.proxiad.savr.common.CustomTextViewMuseo
        android:id="@+id/tvSaveNom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|top"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:textColor="@color/slide_menu_start_color"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top|left"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp" >

        <ImageView
            android:id="@+id/ivSaveImage"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/imageborder"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingTop="0dp" >

            <com.proxiad.savr.common.CustomTextViewMuseo
                android:id="@+id/tvNewspaper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="0dp"
                android:textColor="@color/light_grayD190190190"
                android:textSize="14sp"
                android:textStyle="bold" />

            <include layout="@layout/stars" 
                android:layout_width="match_parent"/>

            <com.proxiad.savr.common.CustomTextViewMuseo
                android:id="@+id/tvAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/list_view_location_pin"
                android:drawablePadding="5dp"
                android:paddingTop="10dp"
                android:textSize="16sp" 
                android:singleLine="true"/>

            
        </LinearLayout>
    </LinearLayout>

    <com.proxiad.savr.common.CustomTextViewMuseo
        android:id="@+id/friendName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:paddingBottom="5dp"
        android:paddingRight="5dp"
        android:paddingTop="15dp"
        android:textColor="@color/light_grayD190190190"
        android:textSize="15sp" />

</LinearLayout>
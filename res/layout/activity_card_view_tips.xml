<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightGreyD241239237"
    android:gravity="center"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/flSendCode"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/borderframe"
        android:gravity="center_horizontal" >

        <ImageView
            android:id="@+id/itemImage"
            android:layout_width="wrap_content"
            android:layout_height="60pt"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:maxHeight="64pt"
            android:minHeight="64pt"
            android:scaleType="centerCrop" />

        <com.proxiad.savr.common.CustomTextViewMuseo
            android:id="@+id/itemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:paddingTop="25pt"
            android:textColor="@color/white"
            android:textSize="10pt" />

        <com.proxiad.savr.common.CustomTextViewMyriad
            android:id="@+id/itemCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/itemImage"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="3.5pt"
            android:layout_marginRight="3.5pt"
            android:background="@drawable/tagwrapper"
            android:paddingLeft="10dp"
            android:textColor="@color/white"
            android:textSize="27dp" />

        <ImageView
            android:id="@+id/plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/itemImage"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="3.5pt"
            android:layout_marginLeft="3.5pt"
            android:onClick="btnPlusOnClick"
            android:src="@drawable/plus_button" />

        <ImageView
            android:id="@+id/line"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/itemImage"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:background="@color/lightGreyD241239237"
            android:maxHeight="5.5pt"
            android:minHeight="5.5pt" />

        <ImageView
            android:id="@+id/backstar"
            android:layout_width="wrap_content"
            android:layout_height="30pt"
            android:layout_below="@+id/itemImage"
            android:layout_marginTop="0pt"
            android:paddingLeft="4pt"
            android:paddingRight="4pt"
            android:paddingTop="5.5pt"
            android:scaleType="fitXY"
            android:src="@drawable/backstar" />

        <ImageView
            android:id="@+id/star1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line"
            android:layout_marginTop="6.5pt"
            android:paddingLeft="11pt"
            android:src="@drawable/greystar" />

        <ImageView
            android:id="@+id/star2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/star1"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/star1"
            android:src="@drawable/greystar" />

        <ImageView
            android:id="@+id/star3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/star1"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/star2"
            android:src="@drawable/greystar" />

        <ImageView
            android:id="@+id/star4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/star1"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/star3"
            android:src="@drawable/greystar" />

        <ImageView
            android:id="@+id/star5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/star1"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/star4"
            android:src="@drawable/greystar" />

        <ImageView
            android:id="@+id/heart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/star1"
            android:layout_marginRight="30dp"
            android:layout_toLeftOf="@+id/share"
            android:src="@drawable/heart" />

        <TextView
            android:id="@+id/likes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/star1"
            android:layout_marginRight="35dp"
            android:layout_toLeftOf="@+id/share"
            android:paddingTop="0dp"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="15dp" 
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/star1"
            android:layout_below="@+id/line"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="0dp"
            android:onClick="btnShareOnClick"
            android:src="@drawable/share" />

        <TableLayout
            android:id="@+id/tableLayout1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/star1"
            android:stretchColumns="2" >

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <com.proxiad.savr.common.CustomTextViewMuseo
                    android:id="@+id/fistLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11pt"
                    android:layout_marginTop="15.5pt"
                    android:layout_weight="1"
                    android:textColor="@color/light_grayD190190190"
                    android:textSize="17dp" />

                <com.proxiad.savr.common.CustomTextViewMuseo
                    android:id="@+id/secondLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="24dp"
                    android:layout_marginTop="15.5pt"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="@color/light_grayD190190190"
                    android:textSize="17dp" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow11"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <com.proxiad.savr.common.CustomTextViewMuseo
                    android:id="@+id/firstValue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11pt"
                    android:layout_weight="1"
                    android:textColor="@color/light_blackD101101101"
                    android:textSize="18dp" />

                <com.proxiad.savr.common.CustomTextViewMuseo
                    android:id="@+id/secondValue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="11pt"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="@color/light_blackD101101101"
                    android:textSize="18dp" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <com.proxiad.savr.common.CustomTextViewMuseo
                    android:id="@+id/thirdLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11pt"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:textColor="@color/light_grayD190190190"
                    android:textSize="17dp" />

                <com.proxiad.savr.common.CustomTextViewMuseo
                    android:id="@+id/fourthLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="11pt"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="@color/light_grayD190190190"
                    android:textSize="17dp" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow22"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <com.proxiad.savr.common.CustomTextViewMuseo
                    android:id="@+id/thirdValue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11pt"
                    android:layout_weight="1"
                    android:textColor="@color/light_blackD101101101"
                    android:textSize="18dp" />

                <com.proxiad.savr.common.CustomTextViewMuseo
                    android:id="@+id/fourthValue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="11pt"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="@color/light_blackD101101101"
                    android:textSize="18dp" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <com.proxiad.savr.common.CustomTextViewMuseo
                    android:id="@+id/fifthLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11pt"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:textColor="@color/light_grayD190190190"
                    android:textSize="17dp" />

                <com.proxiad.savr.common.CustomTextViewMuseo
                    android:id="@+id/sixthLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="11pt"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="@color/light_grayD190190190"
                    android:textSize="17dp" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow33"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <com.proxiad.savr.common.CustomTextViewMuseo
                    android:id="@+id/fifthValue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11pt"
                    android:layout_weight="1"
                    android:textColor="@color/light_blackD101101101"
                    android:textSize="18dp" />

                <com.proxiad.savr.common.CustomTextViewMuseo
                    android:id="@+id/sixthValue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="11pt"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="@color/light_blackD101101101"
                    android:textSize="18dp" />
            </TableRow>
        </TableLayout>

        <ImageView
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/tableLayout1"
            android:layout_marginLeft="11pt"
            android:layout_marginRight="11pt"
            android:layout_marginTop="9pt"
            android:scaleType="centerCrop" />

        <com.proxiad.savr.common.CustomTextViewMuseo
            android:id="@+id/labelArticle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/map"
            android:paddingLeft="11pt"
            android:paddingTop="9pt"
            android:text="@string/title_article"
            android:textColor="@color/light_grayD190190190"
            android:textSize="17dp" />

        <com.proxiad.savr.common.CustomTextViewMuseo
            android:id="@+id/article"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/labelArticle"
            android:paddingBottom="30dp"
            android:paddingLeft="11pt"
            android:paddingRight="11pt"
            android:paddingTop="9pt"
            android:textColor="@color/light_blackD101101101"
            android:textSize="15dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tvMessages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/flSendCode"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="72dp"
        android:gravity="center_horizontal"
        android:textColor="@color/msg_red"
        android:textSize="22sp"
        android:visibility="gone" />

</RelativeLayout>
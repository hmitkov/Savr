<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/menuPanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="vertical" >

        <!-- Search -->

       <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/searchImage"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:src="@drawable/field_search" />

            <EditText
                android:id="@+id/edittext"
                android:layout_width="fill_parent"
                android:layout_height="50dp" 
                android:textColor="@color/light_blackD101101101"
                android:text="@string/search_label"
                android:singleLine="true"
                android:layout_marginRight="10dp"
                android:textSize="13dp"/>
        </RelativeLayout>
		<FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" 
            android:background="@drawable/cat_bg">

            <com.proxiad.savr.common.CustomTextViewMuseo
                android:id="@+id/categoriesLabel"
                android:layout_height="20dp"
                android:layout_width="fill_parent"
                android:layout_gravity="left"
                android:text="@string/title_categories" 
                android:layout_marginLeft="0pt"
                android:layout_marginTop="2pt"
                android:layout_marginBottom="2pt"
                android:paddingLeft="5dp"
                android:textSize="14dp"
                android:textColor="@android:color/white"/>

        </FrameLayout>
        <!-- Store -->


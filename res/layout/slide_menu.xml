                android:id="@+id/btnSlideMenuCategoryDerniereSaves"
                style="@style/slideMenuItemButton"
                android:drawableLeft="@drawable/derniers_saves"
                android:text="@string/category_dernier" 
                android:layout_marginLeft="5pt"
                android:layout_marginTop="2pt"
                android:layout_marginBottom="2pt"
                android:textSize="17dp"/>

            <com.proxiad.savr.common.CustomTextViewMuseo
                android:id="@+id/tvCatDerSaves"
                style="@style/slideMenuItemNumber" />
        </FrameLayout>

